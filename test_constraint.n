#js
import math
import glscene

// my first scenegraph!
define circle(vec3 col, vec2 p, float pw){
	return mix(vec4(#black,0),vec4(col,1),clamp(1.-length(p) ** pw,0.,1.))
}

Scene{
	antialias = true
	fill = #aero

	var lyr
	layout(){
		Scene::layout()
		out(top.lyr.left)
	}

	mouse.click()=>{
		t.pixel = #red
	}

	var t = Layer top{
		w = 50, h = 50
		pixel:#green
	}
}